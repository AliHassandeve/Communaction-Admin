<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp">


    <com.google.android.material.textview.MaterialTextView
        android:textSize="14sp"
        android:id="@+id/DelateButtonID"
        android:text="Remove User"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:elevation="1dp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/removeuserdesign"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content">

    </com.google.android.material.textview.MaterialTextView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SprofileImageID"
        android:layout_width="65dp"
        android:elevation="1dp"
        android:layout_marginLeft="15sp"
        android:layout_centerVertical="true"
        android:src="@drawable/defaultimage"
        android:layout_height="65dp">

    </de.hdodenhof.circleimageview.CircleImageView>


    <RelativeLayout
        android:layout_toRightOf="@id/SprofileImageID"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/SusernameID"
            android:textColor="@android:color/black"
            android:text="Mr Sajib Roy"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/OnlineStatsID"
            android:layout_below="@id/SusernameID"
            android:text="Online"
            android:textSize="14dp"
            android:layout_marginRight="100dp"
            android:singleLine="true"
            android:textColor="#FF5722"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.google.android.material.textview.MaterialTextView>



    </RelativeLayout>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/STimeID"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.material.textview.MaterialTextView>



</RelativeLayout>